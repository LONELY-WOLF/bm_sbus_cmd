<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:bm_sbus_cmd">
    <Style x:Key="ValueSliderStyle" TargetType="Slider">
        <Setter Property="Minimum" Value="0"/>
        <Setter Property="Maximum" Value="2047"/>
        <Setter Property="SmallChange" Value="1"/>
        <Setter Property="LargeChange" Value="16"/>
        <Setter Property="TickFrequency" Value="128"/>
        <Setter Property="TickPlacement" Value="BottomRight"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="3"/>
    </Style>
    <Style x:Key="CommentTextBoxStyle" TargetType="TextBox">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="3"/>
    </Style>
    <Style x:Key="SyncCheckBoxStyle" TargetType="CheckBox">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Content" Value="Sync"/>
        <Setter Property="Margin" Value="3"/>
    </Style>
</ResourceDictionary>
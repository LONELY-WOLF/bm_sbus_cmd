        <ComboBox Name="cmbPorts" VerticalAlignment="Top" HorizontalAlignment="Right" Width="70" DropDownOpened="cmbPorts_DropDownOpened" SelectionChanged="cmbPorts_SelectionChanged"/>
        <Button Content="Test" VerticalAlignment="Bottom" HorizontalAlignment="Right" Click="Button_Click"/>

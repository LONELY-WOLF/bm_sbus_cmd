                            <CheckBox Name="S0_09" Grid.Row="9" Grid.Column="2" Style="{DynamicResource SyncCheckBoxStyle}"/>

                            <TextBox Name="T0_10" Grid.Row="10" Text="SBus channel 12" Style="{DynamicResource CommentTextBoxStyle}"/>
